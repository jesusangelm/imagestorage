<header class="bg-gray-100">
  <nav class="mx-auto flex max-w-7xl items-center p-6 lg:px-8">
    <div class="absolute left-1/2 transform -translate-x-1/2">
      <%= link_to admin_dashboard_path do %>
        <h1 class="text-2xl font-bold text-gray-900">Image Storage</h1>
      <% end %>
    </div>
    <div class="ml-auto">
      <p class="text-sm text-gray-900 mr-4 truncate">Hello <%= Current.user.email_address %></p>
      <%= link_to "Log Out", session_path, method: :delete, class: "text-sm/6 font-semibold text-gray-900 hover:text-gray-700", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to log out?" } if authenticated? %>
    </div>
  </nav>
</header>
