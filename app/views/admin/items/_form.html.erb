<%= form_with model: [:admin, @item] do |f| %>
  <!-- Campo Nombre -->
  <div class="mb-4">
    <%= f.label :name, class: "mb-2 block text-sm font-bold text-gray-700" %>
    <%= f.text_field :name, placeholder: "Enter the name of item", class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none", required: true %>
  </div>
  <!-- Campo Categorias -->
  <div class="mb-4">
    <%= f.label :category_id, class: "mb-2 block text-sm font-bold text-gray-700" %>
    <%= f.collection_select :category_id, @categories, :id, :name, { prompt: "Seleccione una categoría" }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", required: true } %>
  </div>
  <!-- Campo Descripción -->
  <div class="mb-6">
    <%= f.label :desc, "Description", class: "mb-2 block text-sm font-bold text-gray-700" %>
    <%= f.textarea :desc, rows: 4, placeholder: "Enter the description of item", class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none", required: true %>
  </div>
  <!-- Campo para la imagen -->
  <div class="mb-6">
    <%= f.label :image, "Image", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.file_field :image, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", accept: "image/*" %>
    <% if @item.image.attached? %>
      <div class="mt-4">
        <p class="text-sm text-gray-600">Imagen actual:</p>
        <%= image_tag @item.image.variant(:micro), class: "mt-2 w-32 h-32 object-cover rounded-md" %>
      </div>
    <% end %>
  </div>
  <!-- Botón de Enviar -->
  <div class="flex justify-between">
    <%= link_to "cancel", admin_items_url, class: "bg-red-500 text-white p-2 rounded-lg hover:bg-red-600" %>
    <%= f.submit class: "bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 cursor-pointer" %>
  </div>
<% end %>
