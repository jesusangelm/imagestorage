<div class="item flex border-b border-gray-200 hover:bg-gray-100">
  <div class="name w-1/3 py-3 px-4"><%= item.name %></div>
  <div class="desc w-1/3 py-3 px-4"><%= item.desc %></div>
  <div class="desc w-1/3 py-3 px-4"><%= item.category.name %></div>
  <div class="actions w-1/3 py-3 px-4 text-right">
    <%= link_to "📝 Editar", edit_admin_item_path(item),
      class: "bg-blue-500 text-white px-3 py-1 rounded-md hover:bg-blue-600 no-underline" %>
    <%= button_to admin_item_path(item), method: :delete, form: {data: {turbo_confirm: "Are your sure?"}},
      class: "bg-red-500 text-white px-3 py-1 rounded-md hover:bg-red-600 ml-2" do %>
      🚮 Eliminar
    <% end %>
  </div>
</div>
