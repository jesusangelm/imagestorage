<!-- header -->
<%= render "header" %>
<!-- Tarjetas de estadísticas -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold mb-2">Total de Categorías</h3>
    <p class="text-3xl font-bold text-blue-500">25</p>
  </div>
  <div class="bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold mb-2">Total de Usuarios</h3>
    <p class="text-3xl font-bold text-green-500">120</p>
  </div>
  <div class="bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold mb-2">Total de Pedidos</h3>
    <p class="text-3xl font-bold text-purple-500">45</p>
  </div>
</div>
<!-- Gráficos o tablas (ejemplo) -->
<div class="bg-white p-6 rounded-lg shadow">
  <h3 class="text-lg font-semibold mb-4">Actividad Reciente</h3>
  <table class="w-full">
    <thead>
      <tr class="border-b">
        <th class="text-left p-2">ID</th>
        <th class="text-left p-2">Acción</th>
        <th class="text-left p-2">Fecha</th>
      </tr>
    </thead>
    <tbody>
      <tr class="border-b">
        <td class="p-2">1</td>
        <td class="p-2">Nueva categoría creada</td>
        <td class="p-2">2023-10-01</td>
      </tr>
      <tr class="border-b">
        <td class="p-2">2</td>
        <td class="p-2">Usuario registrado</td>
        <td class="p-2">2023-10-02</td>
      </tr>
      <tr class="border-b">
        <td class="p-2">3</td>
        <td class="p-2">Pedido completado</td>
        <td class="p-2">2023-10-03</td>
      </tr>
    </tbody>
  </table>
</div>
