<%= form_with model: [:admin, @category] do |f| %>
  <!-- Campo Nombre -->
  <div class="mb-4">
    <%= f.label :name, class: "mb-2 block text-sm font-bold text-gray-700" %>
    <%= f.text_field :name, placeholder: "Enter the name of category", class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none", required: true %>
  </div>
  <!-- Campo Descripción -->
  <div class="mb-6">
    <%= f.label :desc, "Description", class: "mb-2 block text-sm font-bold text-gray-700" %>
    <%= f.textarea :desc, rows: 4, placeholder: "Enter the description of category", class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none", required: true %>
  </div>
  <!-- Botón de Enviar -->
  <div class="flex justify-between">
    <%= link_to "cancel", admin_categories_url, class: "bg-red-500 text-white p-2 rounded-lg hover:bg-red-600" %>
    <%= f.submit class: "bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 cursor-pointer" %>
  </div>
<% end %>
