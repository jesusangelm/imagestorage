<%= render "header" %>
<div class="categories">
  <div class="container mx-auto">
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <!-- table header -->
      <div class="flex bg-gray-200 text-gray-700 uppercase text-sm leading-normal">
        <div class="w-1/3 py-3 px-4 font-semibold">Name</div>
        <div class="w-1/3 py-3 px-4 font-semibold">Description</div>
        <div class="w-1/3 py-3 px-4 font-semibold text-right">Actions</div>
      </div>
      <!-- table rows -->
      <div class="flex flex-col">
        <% if @categories.any? %>
          <!-- rows -->
          <%= render @categories %>
        <% else %>
          <p>No categories yet</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
