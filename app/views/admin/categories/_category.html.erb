<div class="category flex border-b border-gray-200 hover:bg-gray-100">
  <div class="name w-1/3 py-3 px-4"><%= category.name %></div>
  <div class="desc w-1/3 py-3 px-4"><%= category.desc %></div>
  <div class="actions w-1/3 py-3 px-4 text-right">
    <%= link_to "📝 Editar", edit_admin_category_path(category),
      class: "bg-blue-500 text-white px-3 py-1 rounded-md hover:bg-blue-600 no-underline" %>
    <%= button_to admin_category_path(category), method: :delete,
      class: "bg-red-500 text-white px-3 py-1 rounded-md hover:bg-red-600 ml-2" do %>
      🚮 Eliminar
    <% end %>
  </div>
</div>
